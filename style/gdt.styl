@import "config"
@import "vendors"
@import "gradients"
@import "mixins"

COLUMN_WIDTH = 200px

body
  user-select: none

.todo
  font: 13px DEFAULT_FONT
  width: 600px
  margin: 50px auto
  border-collapse: collapse
  user-select: none
  th
    min-height: 40px
    border-bottom: 1px dotted #ccc
    padding: 10px
  td
    vertical-align: top
    width: 33.3%
    height: 100px
  td, th
    user-select: none
    border-left: 1px dotted #ccc
    &:first-child
      border-left: none

.card
  position: relative
  background: #c1d6ea
  user-select: none
  cursor: pointer
  &.drag
    absolute
    cursor: move
    opacity: .7
  &.task
    background: #c1d6ea
  &.bug
    background: #e9babb

  border: 1px solid #444
  margin: 10px
  padding: 10px
  &.edit
    background: #eee
    cursor: auto
    user-select: text
  &.active
    outline-offset: 1px
    outline: 1px dotted #aaa
    //border: 2px solid blue

.create-card
  width: 600px
  margin: 10px auto
  padding: 10px
  .text-input
    border: 1px solid #ccc
    border-radius: 4px
    width: 580px
    padding: 8px
    font-size: 16px
    outline: none
    margin-bottom: 20px
  .btn
    color: white
    border: 1px solid transparent
    background: #a00
    padding: 4px 12px
    opacity: .2
    border-radius: 3px
    float: right
    transition: opacity .3s ease-in-out
    &:hover
      opacity: 1
    &:active
      background: red

  .load
    background: #0f7978
